{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "script",
      "parser":  "babel"
    },
    "rules": {
        "eqeqeq": "error",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "lines-around-comment": "off",
        "no-undef": "warn",
        "no-unused-expressions": "warn",
        "no-var": "error",
        "prefer-const": "error",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": "off",
        "space-in-parens": "off",
        "yoda": "error"
    }
}